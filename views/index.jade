extends layout

block content
  form(action="/",method="post",enctype="multipart/form-data")
   input(type="file",name="upl",accept="image/*")
   label width:
    input(name="width",type="number",min="1",max="4000",value="928")
   label unsharp:
    input(name="unsharp",value="0.3",type="number",min="0",max="1",step="0.1")
   label prefix:
    input(name="prefix",value="Perm-")
   input(type="submit",value="Permute!")
